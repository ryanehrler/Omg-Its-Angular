{
    "name": "angular-guide",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "build-dev": "ng build --target=development --environment=dev",
        "build-qa": "ng build --target=production --environment=qa",
        "build-prod": "ng build --prod",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "lint-fix": "node_modules/.bin/tslint --fix --project tsconfig.json",
        "format-ts": "node_modules/.bin/prettier --write --list-different \"src/**/*.ts\"",
        "format-html": "node_modules/.bin/glob-run html-beautify -r \"src/**/*.html\"",
        "format-css": "node_modules/.bin/glob-run css-beautify -r \"src/**/*.scss\"",
        "lint-format": "npm run lint-fix && npm run format-ts && npm run format-html && npm run format-css",
        "check-for-tslint-prettier-conflicts": "node_modules/.bin/tslint-config-prettier-check ./tslint.json"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^7.0.1",
        "@angular/cdk": "^7.0.2",
        "@angular/common": "~7.0.0",
        "@angular/compiler": "~7.0.0",
        "@angular/core": "~7.0.0",
        "@angular/forms": "~7.0.0",
        "@angular/http": "~7.0.0",
        "@angular/material": "^7.0.2",
        "@angular/platform-browser": "~7.0.0",
        "@angular/platform-browser-dynamic": "~7.0.0",
        "@angular/router": "~7.0.0",
        "angular-emojify": "^1.0.0",
        "core-js": "^2.5.4",
        "hammerjs": "^2.0.8",
        "ng-lazyload-image": "^5.0.0",
        "ngx-syntax-highlighter": "0.0.8",
        "rxjs": "~6.3.3",
        "zone.js": "~0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.10.0",
        "@angular/cli": "~7.0.3",
        "@angular/compiler-cli": "~7.0.0",
        "@angular/language-service": "~7.0.0",
        "@types/jasmine": "~2.8.8",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "~8.9.4",
        "codelyzer": "~4.5.0",
        "glob-run": "^0.1.6",
        "jasmine-core": "~2.99.1",
        "jasmine-spec-reporter": "~4.2.1",
        "js-beautify": "^1.8.8",
        "karma": "~3.0.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.1",
        "karma-jasmine": "~1.1.2",
        "karma-jasmine-html-reporter": "^0.2.2",
        "prettier": "^1.15.1",
        "protractor": "~5.4.0",
        "ts-node": "~7.0.0",
        "tslint": "~5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "typescript": "~3.1.1"
    }
}
